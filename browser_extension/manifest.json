{
    "manifest_version": 3,
    "name": "TruthGuardian Community Notes",
    "version": "1.0",
    "description": "AI-driven community notes for social platforms like Reddit's r/News.",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.reddit.com/r/news/comments/*/*/"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://f55ed212becc.ngrok-free.app/*"
    ]
}